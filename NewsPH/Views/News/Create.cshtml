@model NewsPH.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Register";
}

<section>
    <h1 class="text-center">Create a news</h1>
    <form asp-controller="News" asp-action="Create" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div>
            <img src="" class="news-image" />
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label"></label>
            <input class="form-control" asp-for="ImageFile" onchange="onChangeImage(event)">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            <span asp-validation-for="ImageFileName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea class="form-control" asp-for="Content" rows="3"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <input type="submit" value="Create" class="btn btn-primary d-block ml-auto" />
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}