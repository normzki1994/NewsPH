@model IEnumerable<NewsPH.Models.News>

@{
    ViewData["Title"] = "News";
}

<section>
    <h1 class="text-center">News</h1>

    @if (Model.Count() > 0)
    {
        foreach (var news in Model)
        { 
            <div class="card" style="width: 18rem;">
                <img src="~/news-image/@news.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@news.Title</h5>
                    <p class="card-text">@news.Content</p>
                    <span class="d-block text-sm-left fw-light mb-2">@news.Date</span>
                    <div class="d-flex align-items-center">
                        <a asp-controller="News" asp-action="Details" asp-route-Id="@news.Id" class="btn btn-secondary mr-1">View</a>
                        <a asp-controller="News" asp-action="Update" asp-route-Id="@news.Id" class="btn btn-primary mr-1">Update</a>
                        <form method="post" asp-controller="News" asp-action="Delete" asp-route-Id="@news.Id">
                            <input type="hidden" value="@news.Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</section>