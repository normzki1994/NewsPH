@model NewsPH.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section>
    <h1 class="text-center">Register for an account</h1>
    <form method="post" asp-action="Register" asp-controller="Account" class="container-sm">
        <div class="text-danger" asp-validation-summary="All"></div>

        @*<input type="hidden" asp-for="RoleName" value="Admin"/>*@
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <input type="submit" value="Register" class="btn btn-primary d-block ml-auto" />
    </form>
</section>