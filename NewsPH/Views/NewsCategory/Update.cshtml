@model NewsPH.Models.NewsCategory

@{
    ViewData["Title"] = "Update news category";
}

<section>
    <h1 class="text-center">Update a news category</h1>

    <form method="post" asp-controller="NewsCategory" asp-action="Update">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <input type="submit" value="Update" class="btn btn-primary d-block ml-auto" />
    </form>
</section>